rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ---------------------------------------------------------
    // "Production" Mode (Permanent)
    // ---------------------------------------------------------
    // Unlike Test Mode, these rules do not expire.
    // However, they are currently set to OPEN (public) because the
    // application uses client-side custom authentication.
    // ---------------------------------------------------------

    // Allow public read/write access to all documents.
    // TODO: To improve security, implement Firebase Authentication 
    // and restrict access based on request.auth.uid.
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
